<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace = 接口的全限定符 -->
<mapper namespace="com.TianHan.mapper.ArticleMapper">

    <select id="queryAll" resultType="com.TianHan.pojo.Article">
        select * from articles where authorId = #{authorId}
    </select>

    <!-- 查询使用 select标签
            id = 方法名
            resultType = 返回值类型
            标签内编写SQL语句
     -->
    <!--主键回显-->
    <insert id="insert" useGeneratedKeys="false" keyProperty="id" keyColumn="id">
        <!--注意SQL语句加括号-->
        INSERT INTO articles (title,img,description,content, time, authorId) VALUES (#{title},#{img},#{description},#{content},#{time},#{authorId})
    </insert>

    <update id="update">
        <!--注意SQL语句加括号-->
        UPDATE articles SET title = #{title}, img = #{img}, description = #{description}, content = #{content} WHERE id = #{id}
    </update>

    <delete id="deleteById">
        <!--注意SQL语句加括号-->
        DELETE FROM articles WHERE id = #{id}
    </delete>

    <select id="selectById" resultType="com.TianHan.pojo.Article">
        SELECT * FROM articles where id = #{id}
    </select>

    <select id="selectByTitle" resultType="com.TianHan.pojo.Article">
        SELECT * FROM articles where title = #{title}
    </select>

    <select id="selectAll" resultType="com.TianHan.pojo.Article">
        SELECT * FROM articles
        <where>
            <if test="title != null and title != ''">title like '%${title}%'</if>
        </where>
        where authorId = #{authorId}
    </select>
    <select id="getArticleCountByDate">
        SELECT COUNT(*) FROM articles WHERE time like '%${dateStr}%'
    </select>

</mapper>